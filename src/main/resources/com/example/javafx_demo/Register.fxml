<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_demo.Register">
   <children>
      <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Pane layoutX="50.0" layoutY="20.0" prefHeight="320.0" prefWidth="500.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: #bdbdbd; -fx-border-width: 1px;">
               <children>
                  <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Registration" />

                  <Label layoutX="30.0" layoutY="40.0" text="Username" />
                  <TextField fx:id="usernameField" layoutX="120.0" layoutY="36.0" prefHeight="25.0" prefWidth="300.0" promptText="Username" />

                  <Label layoutX="30.0" layoutY="80.0" text="Email" />
                  <TextField fx:id="emailField" layoutX="120.0" layoutY="76.0" prefHeight="25.0" prefWidth="300.0" promptText="Email" />

                  <Label layoutX="30.0" layoutY="120.0" text="Password" />
                  <TextField fx:id="passwordField" layoutX="120.0" layoutY="116.0" prefHeight="25.0" prefWidth="300.0" promptText="Password" />

                  <Label layoutX="30.0" layoutY="160.0" text="Phone" />
                  <TextField fx:id="phoneField" layoutX="120.0" layoutY="156.0" prefHeight="25.0" prefWidth="300.0" promptText="Phone" />

                  <Label layoutX="30.0" layoutY="200.0" text="Address" />
                  <TextArea fx:id="addressField" layoutX="120.0" layoutY="196.0" prefHeight="60.0" prefWidth="300.0" promptText="Address" />

                  <Button fx:id="signUpButton" layoutX="120.0" layoutY="276.0" mnemonicParsing="false" onAction="#handleSignUp" style="-fx-background-color: #4D96FF; -fx-text-fill: white;" text="Sign Up" />

                  <Button fx:id="cancelButton" layoutX="220.0" layoutY="276.0" mnemonicParsing="false" style="-fx-background-color: #686D76; -fx-text-fill: white;" text="Cancel" />

                  <Label layoutX="100.0" layoutY="340.0" text="Already have an account?" />
                  <Label fx:id="Login" layoutX="243.0" layoutY="340.0" onMouseClicked="#handleSignIn" style="-fx-font-weight: bold; -fx-text-fill: #315ceb;" text="Sign In Here" />
               </children>
            </Pane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
