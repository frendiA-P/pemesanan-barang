<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_demo.Supplier">
   <children>
      <Pane layoutX="80.0" layoutY="60.0" prefHeight="300.0" prefWidth="440.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: #bdbdbd; -fx-border-width: 1px;">
         <children>
            <Label layoutX="20.0" layoutY="4.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #315ceb;" text="Form Supplier" />

            <Label layoutX="30.0" layoutY="40.0" text="Supplier ID" />
            <TextField fx:id="supplierIdField" layoutX="150.0" layoutY="36.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter Supplier ID" />

            <Label layoutX="30.0" layoutY="80.0" text="Supplier Name" />
            <TextField fx:id="nameField" layoutX="150.0" layoutY="76.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter Supplier Name" />

            <Label layoutX="30.0" layoutY="120.0" text="Contact Info" />
            <TextField fx:id="contactField" layoutX="150.0" layoutY="116.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter Contact Info" />

            <Label layoutX="30.0" layoutY="160.0" text="Telp" />
            <TextField fx:id="telpField" layoutX="150.0" layoutY="156.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter Telephone Number" />

            <Label layoutX="30.0" layoutY="200.0" text="Address" />
            <TextArea fx:id="addressArea" layoutX="150.0" layoutY="196.0" prefHeight="60.0" prefWidth="250.0" promptText="Enter Address" />

            <!-- Tombol-tombol -->
            <Button fx:id="newDataButton" layoutX="41.0" layoutY="268.0" mnemonicParsing="false" style="-fx-background-color: #9BCF53; -fx-text-fill: white;" text="New Data" />
            <Button fx:id="saveButton" layoutX="164.0" layoutY="268.0" mnemonicParsing="false" style="-fx-background-color: #4D96FF; -fx-text-fill: white;" text="Save" />
            <Button fx:id="cancelButton" layoutX="267.0" layoutY="269.0" mnemonicParsing="false" style="-fx-background-color: #686D76; -fx-text-fill: white;" text="Cancel" />
         </children>
      </Pane>
   </children>
</AnchorPane>
